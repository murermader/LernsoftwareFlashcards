<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ViewModel.MainWindowController">
    <VBox id="Vbox" alignment="CENTER" spacing="4.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT"
              prefHeight="0.0" prefWidth="285.0">
            <ComboBox fx:id="userComboBox" prefWidth="150.0"/>
            <Button fx:id="selectUserButton" mnemonicParsing="false" onAction="#handlerSelectUser" text="Auswahl"/>
        </HBox>
        <Button fx:id="editUserButton" mnemonicParsing="false" onAction="#handlerEditUser" prefHeight="40.0"
                prefWidth="284.0" text="Benutzerverwaltung"/>
        <Button fx:id="decksButton" mnemonicParsing="false" onAction="#handlerDeckIndex" prefHeight="40.0"
                prefWidth="284.0" text="Stapelanzeige"/>
        <Button fx:id="statsButton" mnemonicParsing="false" onAction="#handlerStats" prefHeight="40.0" prefWidth="284.0"
                text="Statistiken"/>
        <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handlerQuit" prefHeight="40.0" prefWidth="284.0"
                text="Beenden"/>
    </VBox>
    <HBox fx:id="statusbar" alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="25.0" prefWidth="650.0" AnchorPane.topAnchor="375.0">
        <Label fx:id="statusbarLabel1"/>
    </HBox>
</AnchorPane>
